<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/register_business.css">
<div class="register">
<h1>New Business</h1>
	<form action="/businesses" method="POST">
			<label  for="title">Title</label>
			<input  type="text" id="title" name="business[title]" required>

			<label  for="location">Address</label>
			<input  type="text" id="location" name="business[location]" v-model="address" required>

			<label  for="image">Image Url</label>
			<input  type="text" id="image" name="business[image]">

			<label  for="description">Description</label>
			<textarea  type="text" id="description" name="business[description]" required></textarea>
			<button class="create">Add Business</button>
	</form>
</div>
<br>
<a href="/businesses">All Businesses</a>
<script src="/javascript/add_business.js"></script>