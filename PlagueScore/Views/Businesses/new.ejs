<% layout('layouts/boilerplate')%>

<div class="row">
	<h1 class="text-center">New Business</h1>
	<div class="col-6 offset-3">
		<form action="/businesses" method="POST">
			<div class="mb-3">
				<label class="form-label" for="title">Title</label>
				<input class="form-control" type="text" id="title" name="business[title]" required>
			</div>
			<div class="mb-3">
				<label class="form-label" for="location">Location</label>
				<input class="form-control" type="text" id="location" name="business[location]" required>
			</div>
			<div class="mb-3">
				<label class="form-label" for="image">Image Url</label>
				<input class="form-control" type="text" id="image" name="business[image]">
			</div>
			<div class="mb-3">
				<label class="form-label" for="description">Description</label>
				<textarea class="form-control" type="text" id="description" name="business[description]" required></textarea>
			</div>
			<div class="mb-3">
				<button class="btn btn-success">Add Business</button>
			</div>
		</form>
		<a href="/businesses">All Businesses</a>
	</div>
</div>